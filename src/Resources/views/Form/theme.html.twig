{% extends '@SyliusAdmin/Form/theme.html.twig' %}

{% block default_checkbox_row -%}
    <div class="{% if required %}required {% endif %}field{% if (not compound or force_error|default(false)) and not valid %} error{% endif %}">
        <div class="ui toggle checkbox">
            {{- form_widget(form, {'attr': {
                'data-component': 'mbiz-default',
                'data-related-id': form.parent.children[form.vars.related_form_child.name].vars.id
            }}) -}}
            {{- form_label(form) -}}
            {{- form_errors(form) -}}
        </div>
    </div>
{%- endblock default_checkbox_row %}
